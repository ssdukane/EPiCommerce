@using EPICommerce.Web.Models.ViewModels
@model EPICommerce.Web.Models.Blocks.YouTubeBlock
@{
	string coverImage = "";
	bool hasCoverImage = Model.HasCoverImage;
	if (hasCoverImage)
	{
		coverImage = Url.ContentUrl(Model.CoverImage);
	}
	
}
@if (Model.HasVideo)
{
	@Html.Partial("_Video", new VideoViewModel()
{
	CoverImageUrl = coverImage,
	HasCoverImage = hasCoverImage,
	IframeUrl = Model.YouTubeVideo.GetIframeUrl(hasCoverImage)
})
}