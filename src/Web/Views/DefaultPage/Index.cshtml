@using EPiServer
@using EPiServer.Core
@model EPICommerce.Web.Models.ViewModels.IPageViewModel<EPiServer.Core.PageData>
@{
    ViewBag.Title = Model.CurrentPage.Name;
}

<h2>@Model.CurrentPage.Name</h2>

<ul>
    @foreach (var page in DataFactory.Instance.GetChildren<PageData>(Model.CurrentPage.ContentLink))
    {
        <li>
            @Html.ContentLink(page)
        </li>
    }
</ul>
