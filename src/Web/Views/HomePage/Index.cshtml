@model EPICommerce.Web.Models.ViewModels.IPageViewModel<EPICommerce.Web.Models.PageTypes.HomePage>
@{
	ViewBag.Title = Model.CurrentPage.Name;
}
<div id="frontpage">
@Html.PropertyFor(x => x.CurrentPage.BodyContent, new { CssClass = "overflow-hidden clearfix" })
</div>

@section scripts {
	@Scripts.Render("~/bundles/frontpage")
<script type="text/javascript">
    $(function () { commercestarterkit.FrontPage.init('#frontpage'); });
</script>
}

@section BodyStart {
    @Html.FullRefreshPropertiesMetaData()
}