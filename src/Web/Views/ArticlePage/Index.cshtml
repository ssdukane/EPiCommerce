@using EPICommerce.Web.Helpers
@model EPICommerce.Web.Models.ViewModels.IPageViewModel<EPICommerce.Web.Models.PageTypes.ArticlePage>
@{
	ViewBag.Title = Model.CurrentPage.Name;
}
<div class="article-page">
	<div class="pre-content">
		@Html.PropertyFor(x => x.CurrentPage.PreBodyContent, new { CssClass = "overflow-hidden row" })
	</div>
	@if(!string.IsNullOrEmpty(Model.CurrentPage.PageTitle) || Html.IsInEditMode()) {
	<h1>@Html.PropertyFor(m => m.CurrentPage.PageTitle)</h1>
	}

	@if(Model.CurrentPage.Intro != null || Html.IsInEditMode()) {
	<div class="lead">@Html.PropertyFor(m => m.CurrentPage.Intro)</div>
    }
	<div class="body">
		@Html.PropertyFor(m => m.CurrentPage.BodyText)
	</div>

	<div class="body-content">
		@Html.PropertyFor(x => x.CurrentPage.BodyContent, new { CssClass = "overflow-hidden row" })
	</div>
</div>