@model EPICommerce.Web.Models.ViewModels.NewsletterUnsubscribeViewModel
@{

}
<div class="newsletter-unsubscribe-page">
	<div class="row">
		<div class="col-xs-12">
			<h1 @Html.EditAttributes(m => m.CurrentPage.Title)>@Model.CurrentPage.Title</h1>

			@Html.PropertyFor(m => m.CurrentPage.MainBody)


			<div class="unsubscribe-form">

				<form role="form" method="post" action="?">

					<div class="form-group email">
						@Html.LabelFor(m => m.Email, Html.Translate("/common/newsletter_unsubscribe/email_label"), new { @class = "sr-only" })
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Html.Translate("/common/newsletter_unsubscribe/email_placeholder") })
						@Html.ValidationMessageFor(m => m.Email, Html.Translate("/common/newsletter_unsubscribe/email_validation_error"))
					</div>
					<div class="form-group">
						@Html.ValidationMessageFor(m => m.ErrorResponse)
					</div>
					<div class="form-group clearfix">
						<input type="submit" class="btn btn-default" value="@Html.Translate("/common/newsletter_unsubscribe/submit")"/>
					</div>
				</form>

				@if (ViewBag.SuccessResponse == true)
				{
					<span class="alert alert-success">@Html.Translate("/common/newsletter_unsubscribe/success_response")</span>
				}

			</div>
		</div>
	</div>
</div>
